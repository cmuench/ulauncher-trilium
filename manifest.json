{
  "required_api_version": "^2.0.0",
  "name": "Trilium",
  "description": "Search trilium notes",
  "developer_name": "Christian MÃ¼nch",
  "icon": "images/trilium.png",
  "options": {
    "query_debounce": 0.3
  },
  "preferences": [
    {
      "id": "kw",
      "type": "keyword",
      "name": "Trilium Keyword",
      "description": "Trilium Extension",
      "default_value": "tr"
    },
    {
      "id": "server_url",
      "type": "input",
      "name": "Trilium Server URL",
      "description": "URL of remote server",
      "default_value": ""
    },
    {
      "id": "api_token",
      "type": "input",
      "name": "API Token",
      "description": "Token used to authenticate to ETAPI",
      "default_value": ""
    },
    {
      "id": "open_links_in_local_instance",
      "type": "select",
      "name": "Open links in local instance",
      "description": "Open links in local Trilium instance instead of the remote server.",
      "options": [
        { "value": 0, "text": "no, open on server" },
        { "value": 1, "text": "yes, open locally" }
      ],
      "default_value": 0
    },
    {
      "id": "local_port",
      "type": "select",
      "name": "Local port",
      "description": "Port of the local Trilium instance",
      "options": [
        { "value": 37840, "text": "37840 - Prod" },
        { "value": 37740, "text": "37740 - Dev" }
      ],
      "default_value": 37840
    }
  ]
}
